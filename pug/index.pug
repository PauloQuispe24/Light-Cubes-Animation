- var items = [0];


mixin cubes(index)
    article(class="cube" id="cube-" + (items[index] + 1))
        div.cube__sides
            div.side.side--top
            div.side.side-color.side--1
            div.side.side-color.side--2
            div.side.side-color.side--3
            div.side.side-color.side--4
            div.side.side--bottom
            div.lightning



doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Light Cubes | Animation
        link(rel="stylesheet", href="./css/main.css")

    body
        section.container
            each item in items
                +cubes(item)